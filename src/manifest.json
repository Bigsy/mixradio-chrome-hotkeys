{
  "name": "Mixradio Web Hotkeys",
  "description": "Add keyboard shortcuts to control Mixrad.io from your browser",
  "version": "0.1.2",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "incognito": "split",
  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": ["https://mixrad.io/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "next": {
      "description": "Next track",
      "suggested_key": "Alt+Shift+Period"
    },
    "play-pause": {
      "description": "Play/Pause",
      "suggested_key": "Alt+Shift+Comma"
    },
    "like": {
      "description": "Like track",
      "suggested_key": "Alt+Shift+P"
    },
    "dislike": {
      "description": "Dislike track",
      "suggested_key": "Alt+Shift+O"
    },
    "pinned": {
      "description": "Open mixradio in pinned tab"
    },
    "mymix": {
      "description": "Start Mymix"
    },
    "current-toast": {
      "description": "Current playing track popup"
    }
  },
  "permissions": ["https://mixrad.io/*", "tabs", "notifications", "https://assets.mixrad.io/*"]
}
